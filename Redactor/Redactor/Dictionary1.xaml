<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Redactor">
    <Style x:Key="BoldType" TargetType="MenuItem">
        <Setter Property="FontWeight" Value="Bold"></Setter>
    </Style>
    <Style x:Key="ItalicType" TargetType="MenuItem">
        <Setter Property="FontStyle" Value="Italic"></Setter>
    </Style>
    <Style x:Key="UnderlineType" TargetType="MenuItem">
        <Setter Property="FontWeight" Value="Heavy"></Setter>
    </Style>

    <Style x:Key="FontSizeType" TargetType="Button">
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="BorderBrush" Value="White"></Setter>
    </Style>
</ResourceDictionary>